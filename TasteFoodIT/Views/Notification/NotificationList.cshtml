@model List<TasteFoodIT.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bildirim Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Bildirimler</li>
            <li class="breadcrumb-item active" aria-current="page">Bildirim İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Bildirim Id</th>
                                <th>Bildirim İçerik</th>
                                <th>Okunma Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.NotificationID</td>
                                <td>@item.Description</td>
                                @if (item.IsRead == true)
                                {
                                    <td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationID" class="btn btn-dark">Okunmadı Olarak İşaretle</a></td>
                                }
                                else
                                {
                                    <td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationID" class="btn btn-warning">Okundu Olarak İşaretle</a></td>
                                 }
                                <td><a href="/Category/DeleteCategory/@item.NotificationID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Category/UpdateCategory/@item.NotificationID" class="btn btn-success">Güncelle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Bildirim Girişi</a>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->
    <!-- Modal Logout -->
</div>

